# =========================================
# SuiteCRM / Laravel-style ignore rules
# Project lives in "app/" folder
# =========================================

# Composer dependencies
app/vendor/
app/composer.lock

# Node dependencies and build outputs
app/node_modules/
app/package-lock.json
app/yarn.lock
app/dist/
app/build/
app/.cache/

# Cache and temporary files
app/cache/
app/custom/history/
app/upload/
app/var/
app/tmp/
app/storage/
app/logs/
app/session/
app/public/var/

# IDE / Editor files
.vscode/
.idea/
*.swp
*.swo
*~
*.bak

# OS-specific junk
.DS_Store
Thumbs.db

# Environment / config
# .env
.env.*
app/.env
app/config.php

# Logs
*.log
app/*.log
app/logs/*
app/error_log

# Backup or archive files
*.zip
*.tar
*.gz
*.rar

# Apache / webserver generated files
app/.htaccess

# =========================================
# Optional: if you keep generated assets outside Git
# =========================================
# app/public/js/
# app/public/css/
# app/public/images/
